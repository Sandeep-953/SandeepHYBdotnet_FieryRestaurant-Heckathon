@model ScholarHat.Models.Entities.Employee

@{
    ViewBag["Title"] = "Create";

}
<h4>Create Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Save">
            <div asp-validation-summary="ModelOnly" class="text-black"></div>
            <div class="flex-row">
                <label asp-for="Name" class="form-control-plaintext"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-black"></span>

            </div>
            <div class="flex-row">
                <label asp-for="Address" class="form-control-plaintext"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-black"></span>

            </div>

            <div class="form-group p-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
